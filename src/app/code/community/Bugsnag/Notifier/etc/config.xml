<?xml version="1.0" encoding="UTF-8"?>
<config>
  <modules>
    <Bugsnag_Notifier>
      <version>1.0.0</version>
    </Bugsnag_Notifier>
  </modules>
  <global>
    <models>
      <Bugsnag_Notifier>
        <class>Bugsang_Notifier_Model</class>
      </Bugsnag_Notifier>
    </models>
    <helpers>
      <Bugsnag_Notifier>
        <class>Bugsnag_Notifier_Helper</class>
      </Bugsnag_Notifier>
    </helpers>
    <events>
      <controller_action_predispatch>
        <observers>
          <bugsnag_controller_action_predispatch>
            <type>singleton</type>
            <class>Bugsnag_Notifier_Model_Observer</class>
            <method>initBugsnag</method>
          </bugsnag_controller_action_predispatch>
        </observers>
      </controller_action_predispatch>
    </events>
  </global>
  <frontend>
    <layout>
      <updates>
        <Bugsnag_Notifier>
          <file>bugsnag/notifier.xml</file>
        </Bugsnag_Notifier>
      </updates>
    </layout>
  </frontend>
  <admin>
    <routers>
      <adminhtml>
        <args>
          <modules>
            <Bungsnag_Notifier after="Mage_Adminhtml">Bugsnag_Notifier</Bungsnag_Notifier>
          </modules>
        </args>
      </adminhtml>
    </routers>
  </admin>
</config>
